{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    
     "target": "ESNext",
      "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@lib/*": ["lib/*"]
    },
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  
  "exclude": [
    "node_modules"
  ]
}
